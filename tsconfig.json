{
    "compilerOptions": {
        "rootDir": "./src",
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": false,
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "outDir": "./dist",
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}